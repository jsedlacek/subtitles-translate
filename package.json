{
	"name": "subtitles-translate",
	"version": "1.0.0",
	"description": "Download subtitles from OpenSubtitles and translate them using Google Gemini AI",
	"main": "index.ts",
	"type": "module",
	"engines": {
		"node": ">=24.0.0"
	},
	"scripts": {
		"start": "node --env-file=.env --experimental-strip-types index.ts",
		"test": "node --test --experimental-strip-types 'lib/**/*.test.ts'",
		"type-check": "tsc --noEmit",
		"build": "tsc",
		"check": "biome check .",
		"format": "biome format --write .",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write ."
	},
	"keywords": [
		"subtitles",
		"translation",
		"opensubtitles",
		"gemini",
		"ai"
	],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@google/genai": "^1.12.0",
		"@types/yargs": "^17.0.33",
		"opensubtitles.com": "^1.1.0",
		"pino": "^9.7.0",
		"pino-pretty": "^13.1.1",
		"yargs": "^18.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.3",
		"@types/node": "^22.9.0",
		"@types/yargs": "^17.0.33",
		"typescript": "^5.6.3"
	}
}
